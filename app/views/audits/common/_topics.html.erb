<div class="form-group" data-module="multiselect-autocomplete" data-select-type="topic">
  <%= label_tag :topics %>
  <div class="select-wrapper js-select-wrapper">
    <%= hidden_field_tag("topics[]", [""], id: nil) %>
    <%= select_tag :topics,
                   topic_options_for_select(filter.topics),
                   include_blank: true,
                   multiple: true,
                   class: "form-control js-select",
                   data: {
                     tracking_id: "topics",
                   } %>
  </div>
</div>
