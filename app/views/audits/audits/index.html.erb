
<% content_for :sidebar do %>
  <%= render 'sidebar' %>
<% end %>

<% content_for :header do %>
    <%= render 'audits/common/navigation' %>
<% end %>

<%= render "no_content_to_audit" if content_items.empty? %>
<% if @first_item %>
    <%= link_to "Start audit of first item", content_item_audit_path(@first_item, filter_params), class: "btn btn-success", style: 'margin-bottom:10px;' %>
<% end %>
<%= render "content_items", locals: { content_items: content_items } if content_items.any? %>
