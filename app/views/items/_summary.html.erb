<div class="summary">
  <div class="row">
    <div class="summary-item col-xs-4">
      <span class="summary-item-value"><%= number_with_delimiter @metrics[:total_pages][:value] %></span>
      <span class="summary-item-label">Live pages</span>
    </div>
    <div class="summary-item col-xs-4">
      <span class="summary-item-value"><%= number_with_delimiter @metrics[:zero_page_views][:value] %></span>
      <span class="summary-item-label">Pages with zero views last month</span>
    </div>
    <div class="summary-item col-xs-4">
      <span class="summary-item-value"><%= number_with_delimiter @metrics[:pages_not_updated][:value] %></span>
      <span class="summary-item-label">Pages not updated in 6 months</span>
    </div>
  </div>
  <div class="row">
    <div class="summary-item col-xs-4">
      <span class="summary-item-value"><%= number_with_precision @metrics[:pages_with_pdfs][:percentage], precision: 1 %>%</span>
      <span class="summary-item-label">Pages that contain PDF content</span>
    </div>
    <div class="summary-item col-xs-4">
      <span class="summary-item-value"><%= number_with_precision @metrics[:pages_with_word_files][:percentage], precision: 1 %>%</span>
      <span class="summary-item-label">Pages that contain Word attachments</span>
    </div>
  </div>
</div>
